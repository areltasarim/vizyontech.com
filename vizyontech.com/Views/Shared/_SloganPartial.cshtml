@{
    var _context = new AppDbContext();

    var dil = Context.Features.Get<Microsoft.AspNetCore.Localization.IRequestCultureFeature>().RequestCulture.Culture.Name;
    var resimDizini = ImageHelper.DosyaYolu(DosyaYoluTipleri.Resim).Remove(0, 7) + "Sayfalar/";

    var slogan = _context.SayfalarTranslate.Where(p => p.Sayfalar.SayfaTipi == SayfaTipleri.Slogan2 && p.Sayfalar.ParentSayfaId == 1).SingleOrDefault(p => p.Diller.DilKodlari.DilKodu == dil);
    var slogan_tr_dil = _context.SayfalarTranslate.Where(p => p.Sayfalar.SayfaTipi == SayfaTipleri.Slogan2 && p.Sayfalar.ParentSayfaId == 1).SingleOrDefault(p => p.Diller.DilKodlari.DilKodu == "tr-TR");
    var sloganresim = slogan?.Resim == "/Content/Upload/Images/resimyok.png" ? slogan_tr_dil?.Resim : resimDizini + slogan?.Resim;

}

<!--========= About Resources Wrapper Start ===========-->
<div class="about-resources-wrapper">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-6 order-2 order-lg-1">
                <div class="resources-left-box">
                    <div class="resources-inner">
                        <h6 class="sub-title mb-20">
                            @slogan?.SayfaAdi
                        </h6>
                        <h3 class="heading">@slogan?.BreadcrumbAdi   <span class="text-color-primary">@slogan?.BreadcrumbAciklama</span></h3>
                        <div class="button mt-30">
                            <a href="@slogan?.ButonUrl" class="ht-btn ht-btn-md">@slogan?.ButonAdi</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 order-1 order-lg-2">
                <div class="resources-right-box">
                    <div class="resources-right-inner text-center">
                        <div class="resources-images">
                            <img class="img-fluid" src="@sloganresim" alt="" loading="lazy">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--========= About Resources Wrapper End ===========-->
