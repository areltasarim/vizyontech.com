<script>
    var page = 2;
    var pageSize = 6
    $("#dahaFazlaGoster").click(function () {
        $.ajax({
            url: "/Admin/Sayfalar/BlogDahaFazlaGoster?page=" + page + "&pageSize=" + pageSize,
            success: function (data) {
                $("#BlogListe").append(data);
                page++;

                if ($.trim(data) == '') {
                    $("#dahaFazlaGoster span").html("Gösterilecek Öğe Yok");
                }
            }
        });
    });
</script>