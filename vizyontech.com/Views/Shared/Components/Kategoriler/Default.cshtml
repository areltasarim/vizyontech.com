@inject HelperServis _helperServis
@model IEnumerable<Kategoriler>
@{
    var dil = _helperServis.GetCurrentCulture();
}
@foreach (var item in Model)
{
    var kategori = item.KategorilerTranslate.SingleOrDefault(p => p.Diller.DilKodlari.DilKodu == dil);
    var seoUrl = await _helperServis.GetSeoUrl(item.Id, SeoUrlTipleri.Kategori);

    <li value="23">
        <a href="@seoUrl?.Url">
            @kategori?.KategoriAdi <span style="display: inline-block;background-color: #f5c100;width: 24px;height: 24px;line-height: 24px;text-align: center;border-radius: 20px;margin-left: 5px;font-size: 12px;color: #253d4e;">
                @_helperServis.GetKategoriSayisi(item.Id)
            </span>
        </a>
    </li>
}