@inject HelperServis _helperServis
@{
    var siteAyariHelper = await _helperServis.GetSiteAyari();
    var siteAyari = siteAyariHelper?.SiteAyarlari;
    var dil = _helperServis.GetCurrentCulture();
    var kategoriler = await _helperServis.GetKategoriler();


    var url = ViewContext.RouteData.Values["url"].ToString();
    var urlId = _helperServis.GetUrl(url);

    var sabitMenu = await _helperServis.GetSabitMenu(SabitSayfaTipleri.Kategoriler);


    ViewBag.MetaTitle = siteAyariHelper?.MetaBaslik ?? "";
    ViewBag.MetaAnahtar = siteAyariHelper?.MetaAnahtar ?? "";
    ViewBag.MetaAciklama = siteAyariHelper?.MetaAciklama ?? "";
}



<!-- breadcrumb -->
<section class="page-title" style="background: #0f2c49 !important; ">
    <div class="auto-container">
        <div class="title-outer">
            <h1 class="title">@sabitMenu?.MenuAdi</h1>
        </div>
    </div>
</section>


<!-- ürün listesi -->
<section class="featured-products">
    <span class="bg-shape"></span>
    <div class="auto-container">
        <div class="mixitup-gallery">
            <div class="filter-list row">
                @foreach (var item in kategoriler)
                {
                    var seoUrl = _helperServis.GetSeoUrl(item.KategoriId, SeoUrlTipleri.Kategori).Result.Url;

                    <div class="product-block col-lg-3 col-md-6 col-sm-12">
                        <div class="inner-box">
                            <div class="image"><a href="@seoUrl"><img src="@item?.ResimYolu" alt="" loading="lazy" /></a></div>
                            <div class="content">
                                <h4><a href="@seoUrl">@item.KategoriAdi</a></h4>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>