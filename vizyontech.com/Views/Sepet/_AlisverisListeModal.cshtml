@inject HelperServis _helperServis
@model UrunlerTranslate
@{
    var urunResim = _helperServis.GetUrunResim(Model.UrunId).Result;
    var seoUrl = _helperServis.GetSeoUrl(Model.UrunId, SeoUrlTipleri.Urun).Result;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="ltn__quick-view-modal-inner">
        <div class="modal-product-item">
            <div class="row">
                <div class="col-12">
                    <div class="modal-product-info">
                        <h5><a href="#">@Model.UrunAdi</a></h5>
                        <p class="added-cart"><i class="fa fa-check-circle"></i>  Başarıyla Alışveriş Listenize Eklendiniz</p>
                        <div class="btn-wrapper">
                            <a asp-controller="Account" asp-action="Hesabim" asp-route-tip="alisverislistem" class="theme-btn-1 btn btn-effect-1">Alışveriş Listesi</a>
                        </div>
                    </div>
                    <!-- additional-info -->
                    <div class="additional-info d-none">
                        <p>We want to give you <b>10% discount</b> for your first order, <br>  Use discount code at checkout</p>
                        <div class="payment-method">
                            <img src="img/icons/payment.png" alt="#" loading="lazy">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>