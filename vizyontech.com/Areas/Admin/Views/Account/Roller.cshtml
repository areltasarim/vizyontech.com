@model List<AppRole>
@{
    ViewBag.Title = "Roller";

    var controllerValue = HttpContextAccessor.HttpContext.Request.RouteValues["Controller"];

}

@section styles {

}


<partial name="_SayfaBreadcrumb" />
<partial name="_BilgiMesaji" />

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <ul class="nav nav-tabs nav-tabs-custom mb-4">
                    <li class="nav-item mb-2">
                        <a asp-area="Admin" asp-controller="@controllerValue" asp-action="RolEkle" class="btn btn-success text-white mb-2 float-right"><i class="mdi mdi-plus mr-2"></i> @ViewData["AltBaslik"]</a>
                    </li>
                </ul>
                <table id="alternative-page-datatable" data-pattern="priority-columns" class="table dt-responsive nowrap w-100">
                    <thead>
                        <tr>
                            <partial name="_SayfaUstCheckbox" />
                            <th>Roller</th>
                            <th style="width: 120px;">Kontrol</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            ViewData["pageName"] = item.Name;

                            <tr>
                                <partial name="_SayfaAltCheckbox" for="@item" />
                                <td>
                                    @item.Name
                                </td>

                                <td>
                                    <form asp-action="RoleDelete" asp-route-id="@item.Id">
                                        <a asp-controller="@controllerValue" asp-action="RolEkle" asp-route-id="@item.Id" class="mr-3 text-primary" data-toggle="tooltip" data-placement="top" title="Düzenle" data-original-title="Düzenle"><i class="mdi mdi-pencil font-size-18"></i></a>
                                        <a asp-controller="@controllerValue" asp-action="RolSil" asp-route-id="@item.Id" asp-route-id="@item.Id" data-name="@ViewData["pageName"]" class="text-danger remove" data-toggle="tooltip" data-placement="top" title="Sil" data-original-title="Sil"><i class="mdi mdi-trash-can font-size-18"></i></a>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<partial name="_RemoveModal" />

@section scripts
{
    <partial name="_DataTableScriptsPartial" />
    <partial name="_CustomScriptsPartial" />

}