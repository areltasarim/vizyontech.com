@model GirisYapViewModel
@{
    Layout = null;
}
<!doctype html>
<html lang="tr">

<head>

    <meta charset="utf-8" />
    <title>Yönetim Paneli | Arel Tasarım</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Yönetim Paneli | Arel Tasarım" name="description" />
    <meta content="Arel Tasarım" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="~/Admin/Content/Theme/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/Admin/Content/Theme/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/Admin/Content/Theme/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

</head>

<body class="auth-body-bg">
    <div>
        <div class="container-fluid p-0">
            <div class="row g-0">
                <div class="col-lg-4">
                    <div class="authentication-page-content p-4 d-flex align-items-center min-vh-100">
                        <div class="w-100">
                            <div class="row justify-content-center">
                                <div class="col-lg-9">
                                    <div>
                                        <div class="text-center">
                                            <div>
                                                <a href="/" class="">
                                                    <img src="~/Admin/Content/Theme/assets/images/logo-dark.png" alt="" class="auth-logo logo-dark mx-auto">
                                                    <img src="~/Admin/Content/Theme/assets/assets/images/logo-light.png" alt="" class="auth-logo logo-light mx-auto">
                                                </a>
                                            </div>
                                            <h4 class="font-size-18 mt-4">Yönetim Paneli</h4>
                                        </div>

                                        <div class="p-2 mt-5">
                                            <form asp-area="Admin" asp-controller="Account" asp-action="GirisYap" class="form-horizontal" method="post">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                                <div class="mb-3 auth-form-group-custom mb-4">
                                                    <i class="ri-user-2-line auti-custom-input-icon"></i>
                                                    <label for="username">Email</label>
                                                    <input type="email" class="form-control" asp-for="Email" placeholder="Email">
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>

                                                <div class="mb-3 auth-form-group-custom mb-4">
                                                    <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                                    <label for="userpassword">Şifre</label>
                                                    <input type="password" class="form-control" asp-for="Password" placeholder="Şifre">
                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                </div>

                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" id="customControlInline" asp-for="RememberMe">
                                                    <label class="form-check-label" for="customControlInline">Beni Hatırla</label>
                                                </div>

                                                <div class="mt-4 text-center">
                                                    <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Giriş Yap</button>
                                                </div>

                                                <div class="mt-4 text-center">
                                                    <a asp-area="Admin" asp-controller="Account" asp-action="SifremiUnuttum" class="text-muted"><i class="mdi mdi-lock me-1"></i> Şifremi Unuttum?</a>
                                                </div>
                                            </form>
                                        </div>

                                        <div class="mt-5 text-center">
                                            <p>© Arel Tasarım <i class="mdi mdi-heart text-danger"></i> Copyright © @DateTime.Now.Year</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="authentication-bg">
                        <div class="bg-overlay"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- JAVASCRIPT -->
    <script src="~/Admin/Content/Theme/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/libs/node-waves/waves.min.js"></script>

    <script src="~/Admin/Content/Theme/assets/js/app.js"></script>

</body>
</html>
