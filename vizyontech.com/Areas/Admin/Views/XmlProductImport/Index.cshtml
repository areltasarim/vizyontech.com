@model vizyontech.com.Models.LoadViewModel

@{
    var controllerValue = HttpContextAccessor.HttpContext.Request.RouteValues["controller"];
}
<partial name="_SayfaBreadcrumb" />
@*<partial name="_BilgiMesaji" />*@

<div class="alert-dismissible fade show bilgimesajiDurum" role="alert" style="display:none">
    <i class="mdi mdi-check-all me-2"></i>
    <span class="bilgimesaji"></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>


<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">
                        <i class="ri-edit-box-line"></i> @ViewData["AltBaslik"]
                    </h4>
                    <hr class="my-4">
                    <!--   Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#genel" role="tab">
                                <span class="">Genel</span>
                            </a>
                        </li>
                    </ul>

                    <!--  Tab panes-->
                    <div class="tab-content p-3 text-muted">
                        <div class="tab-pane active" id="genel" role="tabpanel">
                            <!--  Tab panes-->
                            <div class="text-center mt-5">
                                <div id="div-loading" class="div-loading progress" style="height: 20px; display: none">
                                    <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>

                                <div id="final-result" class="" role="alert" style="display:none">

                                </div>
                            </div>
                            <!--  Tab panes-->
                        </div>
                    </div>
                    <div class="col-md-12 mb-2 mt-4 center-block">
                        <div class="text-center">
                            <div class="form-group mb-0">
                                <div>
                                    <div class="button-items">
                                        <button type="button" value="Kaydet" btn-action="XmlProductImport/XmlImport" name="submit" class="btn btn-success waves-effect waves-light mr-1 btnEkle btn-progress">
                                            <i class="fa fa-check"></i>  Kaydet
                                        </button>
                                        <button type="button" value="KaydetGuncelle" btn-action="XmlProductImport/XmlImport" name="submit" class="btn btn-primary waves-effect waves-light mr-1 btnEkle btnEkleGuncelle btn-progress">
                                            <i class="fa fa-check"></i>  Kaydet ve Güncelle
                                        </button>
                                        <a class="btn btn-danger waves-effect text-white" href="/Admin/@controllerValue/Index/@Context.Request.QueryString">
                                            <i class="fa fa-reply"></i> İptal
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_CustomScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script src="~/js/excelupload.js"></script>
}