@inject HelperServis _helperServis
@model KuponViewModel
@{
    ViewData["Title"] = ViewData["AltBaslik"].ToString();

    var _context = new AppDbContext();

}

@section styles
{
    <link href="~/lib/jqueryui/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Admin/Content/Theme/ozelcss/custom.css" rel="stylesheet" type="text/css" />
    <link href="assets/libs/summernote/summernote-bs4.min.css" rel="stylesheet" type="text/css" />

}

<partial name="_SayfaBreadcrumb" />
<partial name="_BilgiMesaji" />

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">
                        <i class="ri-edit-box-line"></i> @ViewData["AltBaslik"]
                    </h4>
                    <hr class="my-4">
                    <!--   Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#genel" role="tab">
                                <span class="">Genel</span>
                            </a>
                        </li>
                    </ul>
                    <!--  Tab panes-->
                    <div class="tab-content p-3 text-muted">
                        <div class="tab-pane active" id="genel" role="tabpanel">
                            <!--  Tab panes-->
                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">Kupon Adı</label>
                                <div class="col-md-9">
                                    <input class="form-control" asp-for="Kupon.KuponAdi" type="text">
                                    <span asp-validation-for="Kupon.KuponAdi" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">Kod</label>
                                <div class="col-md-9">
                                    <input class="form-control" asp-for="Kupon.Kod" type="text">
                                    <span asp-validation-for="Kupon.Kod" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">Oran Tipi</label>
                                <div class="col-md-9">
                                    <select class="form-control" asp-for="Kupon.OranTipi" asp-items="Html.GetEnumSelectListWithDefaultValue<KuponOranTipi>(defaultValue:KuponOranTipi.Yuzde)">
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">İndirim</label>
                                <div class="col-md-9">
                                    <input class="form-control" asp-for="Kupon.Indirim" type="number">
                                    <span asp-validation-for="Kupon.Indirim" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">Toplam Tutar</label>
                                <div class="col-md-9">
                                    <input class="form-control" asp-for="Kupon.ToplamTutar" type="number">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">Başlangıç Tarihi</label>
                                <div class="col-md-9">
                                    <input class="form-control Tarih" asp-for="Kupon.BaslangicTarihi" data-provide="datepicker" data-date-format="dd-mm-yy" data-date-autoclose="true" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.Kupon.BaslangicTarihi)">

                                    <span asp-validation-for="Kupon.BaslangicTarihi" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">Bitiş Tarihi</label>
                                <div class="col-md-9">
                                    <input class="form-control Tarih" asp-for="Kupon.BitisTarihi" data-provide="datepicker" data-date-format="dd-mm-yy" data-date-autoclose="true" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.Kupon.BitisTarihi)">

                                    <span asp-validation-for="Kupon.BitisTarihi" class="text-danger"></span>
                                </div>
                            </div>
                            <div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Ürünler</label>
                                    <div class="col-md-9">
                                        <input class="form-control" asp-for="KuponAutocomplete" type="text" placeholder="Ürünler">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label"></label>
                                    <div class="col-md-9">
                                        <div id="SeciliKuponAutocomplete" class="well well-sm" style="height: 200px; overflow: auto;">
                                            <section class="panel">
                                                <div class="panel-body">
                                                    <div class="sortable">
                                                        <ol class="sortable ui-sortable">
                                                            @foreach (var kupon in _context.KuponToUrun.Where(x => x.KuponId == Convert.ToInt32(ViewContext.RouteData.Values["Id"])).ToList())
                                                            {
                                                                var urun = kupon.Urun.UrunlerTranslate.SingleOrDefault(p => p.Diller.DilKodlari.DilKodu == _helperServis.GetCurrentCulture());

                                                                <li id="SeciliKuponAutocomplete@(urun.Id)">
                                                                    <div>
                                                                        <i class="fa fa-plus"></i>  @urun.UrunAdi
                                                                        <p style="z-index: 2;float: right;padding-right: 10px;margin-top: 0px;font-size: 12px;font-family: Arial;">
                                                                            <a style="cursor:pointer" class="kupontourunid" data-kupontourunid="@(urun.Id)"><i class="fa fa-trash"></i> Kaldır</a>
                                                                        </p>
                                                                        <input type="hidden" name="SeciliKuponAutocomplete" value="@urun.UrunId">
                                                                    </div>
                                                                </li>
                                                            }
                                                        </ol>
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">Durum</label>
                                <div class="col-md-9">
                                    <select class="form-control" asp-for="Kupon.Durum" asp-items="Html.GetEnumSelectListWithDefaultValue<SayfaDurumlari>(defaultValue:SayfaDurumlari.Aktif)">
                                    </select>
                                </div>
                            </div>
                            <!--  Tab panes-->
                        </div>
                    </div>
                    <div class="col-md-12 mb-2 mt-4 center-block">
                        <div class="text-center">
                            <div class="form-group mb-0">
                                <div>
                                    <partial name="_SayfaButonlari" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />


    <script src="~/Admin/Content/Theme/assets/libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/libs/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/libs/bootstrap-touchspin/jquery.bootstrap-touchspin.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>

    <script>
        $(function () {
            $('input[name=\'KuponAutocomplete\']').autocomplete({
                source: "/Admin/Kuponlar/KuponAutoComplete",
                minLength: 1,
                select: function (event, ui) {
                    $('#SeciliKuponAutocomplete' + ui.item['id']).remove();
                    $('#SeciliKuponAutocomplete .ui-sortable').append('<li id="SeciliKuponAutocomplete' + ui.item['id'] + '"><div><i class="fa fa-plus"></i>  ' + ui.item['label'] + '<p style="z-index: 2;float: right;padding-right: 10px;margin-top: 0px;font-size: 12px;font-family: Arial;"><a style="cursor:pointer" class="kupontourunid"  data-kupontourunid="' + ui.item['id'] + '"><i class="fa fa-trash"></i> Kaldır</a></p><input type="hidden" name="SeciliKuponAutocomplete" value="' + ui.item['id'] + '"></div></li>');
                    ui.item.value = "";
                    KuponAutoComleteSil();
                }

            });
        });

        function KuponAutoComleteSil() {
            $(".kupontourunid").click(function () {
                var kupontourunid = $(this).attr("data-kupontourunid");
                $("#SeciliKuponAutocomplete" + kupontourunid).remove();
            });
        }
        KuponAutoComleteSil();
    </script>

    <script src="~/Admin/Content/Theme/ozel/menu-sortable/jquery-ui-1.12.1/jquery-ui.min.js"></script>
    <script src="~/Admin/Content/Theme/ozel/menu-sortable/jquery.mjs.nestedSortable.js"></script>
    <!-- Sürükle Bırak Menü-->
    <script>
        //Sayfa Sıralama
        $(document).ready(function () {
            $('ol.sortable').nestedSortable({
                forcePlaceholderSize: true,
                handle: 'div',
                helper: 'clone',
                items: 'li',
                opacity: .6,
                placeholder: 'placeholder',
                revert: 250,
                tabSize: 25,
                tolerance: 'pointer',
                toleranceElement: '> div',
                maxLevels: 10,
                isTree: true,
                expandOnHover: 700,
                startCollapsed: true,
                stop: function () {
                }
            });
        });
        //Sayfa Sıralama

    </script>

    <script>
        $(function ($) {
            $.fn.datepicker.dates['tr'] =
            {
                days: ["Pazar", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi", "Pazar"],
                daysShort: ["Pz", "Pzt", "Sal", "Çrş", "Prş", "Cu", "Cts", "Pz"],
                daysMin: ["Pz", "Pzt", "Sa", "Çr", "Pr", "Cu", "Ct", "Pz"],
                months: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                monthsShort: ["Oca", "Şub", "Mar", "Nis", "May", "Haz", "Tem", "Ağu", "Eyl", "Eki", "Kas", "Ara"],
                today: "Bugün",
                suffix: [],
                meridiem: []
            };
        });

        $(function ($) {
            $(".Tarih").datepicker({
                dateFormat: "dd-mm-yy",
                changeMonth: true,
                changeYear: true,
                regional: "tr",  
                autoclose: true,
                onSelect: function (dateText, inst) {
                    $(this).val(dateText);
                }
            });
        });
    </script>
} 