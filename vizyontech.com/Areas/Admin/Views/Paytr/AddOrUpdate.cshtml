@model Paytr
@{
    ViewData["Title"] = ViewData["AltBaslik"].ToString();
}

@section styles
{
}

<partial name="_SayfaBreadcrumb" />
<partial name="_BilgiMesaji" />

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">
                        <i class="ri-edit-box-line"></i> @ViewData["AltBaslik"]
                    </h4>
                    <hr class="my-4">
                    <!--   Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#genel" role="tab">
                                <span class="">Genel</span>
                            </a>
                        </li>
                    </ul>
                    <!--  Tab panes-->
                    <div class="tab-content p-3 text-muted">
                        <div class="tab-pane active" id="genel" role="tabpanel">
                            <!--  Tab panes-->
                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">Mağaza No</label>
                                <div class="col-md-9">
                                    <input class="form-control" asp-for="MagazaNo" type="text">
                                    <span asp-validation-for="MagazaNo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">Mağaza Parola</label>
                                <div class="col-md-9">
                                    <input class="form-control" asp-for="MagazaParola" type="text">
                                    <span asp-validation-for="MagazaParola" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">Mağaza Anahtar</label>
                                <div class="col-md-9">
                                    <input class="form-control" asp-for="MagazaAnahtar" type="text">
                                    <span asp-validation-for="MagazaAnahtar" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">Api Türü</label>
                                <div class="col-md-9">
                                    <select class="form-control" asp-for="TestModu" asp-items="Html.GetEnumSelectListWithDefaultValue<PaytrApiModu>(defaultValue: PaytrApiModu.Canli)">
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">Taksit Sayısı</label>
                                <div class="col-md-9">
                                    <select class="form-control" asp-for="TaksitSayisi" asp-items="Html.GetEnumSelectListWithDefaultValue<TaksitSayilari>(defaultValue: TaksitSayilari.TekCekim)">
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">Maksimum Taksit Sayısı</label>
                                <div class="col-md-9">
                                    <input class="form-control" asp-for="MaksimumTaksitSayisi" type="text">
                                    <span asp-validation-for="MaksimumTaksitSayisi" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-md-1 col-form-label">Ödeme Formu Dili</label>
                                <div class="col-md-9">
                                    <select class="form-control" required asp-for="DilId" asp-items="@ViewData["Diller"] as IEnumerable<SelectListItem>">
                                        <option value="">Seçiniz</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-md-1 col-form-label">Para Birimi</label>
                                <div class="col-md-9">
                                    <select class="form-control" required asp-for="ParaBirimId" asp-items="@ViewData["ParaBirimleri"] as IEnumerable<SelectListItem>">
                                        <option value="">Seçiniz</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-md-1 col-form-label">Başarılı Ödeme Durumu</label>
                                <div class="col-md-9">
                                    <select class="form-control" required asp-for="BasariliSiparisDurumId" asp-items="@ViewData["SiparisDurumlari"] as IEnumerable<SelectListItem>">
                                        <option value="">Seçiniz</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-md-1 col-form-label">Hatalı Ödeme Durumu</label>
                                <div class="col-md-9">
                                    <select class="form-control" required asp-for="HataliSiparisDurumId" asp-items="@ViewData["SiparisDurumlari"] as IEnumerable<SelectListItem>">
                                        <option value="">Seçiniz</option>
                                    </select>
                                </div>
                            </div>
                            <!--  Tab panes-->
                        </div>
                    </div>
                    <div class="col-md-12 mb-2 mt-4 center-block">
                        <div class="text-center">
                            <div class="form-group mb-0">
                                <div>
                                    <partial name="_SayfaButonlari" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />

} 