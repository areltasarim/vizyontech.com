@model Ekipler
@{
    ViewData["Title"] = ViewData["AltBaslik"].ToString();
}

@section styles
{
    <link href="assets/libs/summernote/summernote-bs4.min.css" rel="stylesheet" type="text/css" />
}

<partial name="_SayfaBreadcrumb" />
<partial name="_BilgiMesaji" />

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">
                        <i class="ri-edit-box-line"></i> @ViewData["AltBaslik"]
                    </h4>

                    <hr class="my-4">
                    <!--   Nav tabs -->

                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#genel" role="tab">
                                <span class="">Genel</span>
                            </a>
                        </li>
                    </ul>

                    <!--  Tab panes-->
                    <div class="tab-content p-3 text-muted">
                        <div class="tab-pane active" id="genel" role="tabpanel">
                            <!--  Dil panes-->
                            <ul class="nav nav-tabs" role="tablist">
                                @foreach (var dil in ViewBag.Diller as IEnumerable<Diller>)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @((dil.DilKodlari.DilKodu == "tr-TR")? "active":"")" data-bs-toggle="tab" href="#dil-@(dil.DilKoduId)" role="tab">
                                            <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                                            <span class="d-none d-sm-block">@dil.DilAdi</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                            <!--  Tab panes-->
                            <div class="tab-content p-3 text-muted">

                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Kategori</label>
                                    <div class="col-md-9">
                                        <select class="form-control" asp-for="Kategori" asp-items="Html.GetEnumSelectList<EkipKategorileri>()">
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Ad Soyad</label>
                                    <div class="col-md-9">
                                        <input class="form-control" asp-for="AdSoyad" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.AdSoyad)">
                                    </div>
                                </div>
                                @foreach (var dil in ViewBag.Diller as IEnumerable<Diller>)
                                {

                                    <div class="tab-pane @((dil.DilKodlari.DilKodu == "tr-TR")? "active":"")" id="dil-@(dil.DilKoduId)" role="tabpanel">
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Görevi</label>
                                            <div class="col-md-9">
                                                <input class="form-control" name="GorevCeviri" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.EkiplerTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.Gorev)">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Açıklama</label>
                                            <div class="col-md-9">
                                                <textarea class="form-control" name="AciklamaCeviri" rows="5">@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.EkiplerTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.Aciklama)</textarea>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label"></label>
                                    <div class="col-md-9">
                                        <img id="picturePreview" src="@(ViewContext.RouteData.Values["Id"] == null ? "/Content/Upload/Images/resimyok.png" : Model.Resim)" />
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Üye Resmi</label>
                                    <div class="col-md-9">
                                        <div class="custom-file">
                                            <input type="file" class="form-control" id="pictureFile" name="EkipResim" lang="tr">
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label"></label>
                                    <div class="col-md-9">
                                        <img id="picturePreview" src="@(ViewContext.RouteData.Values["Id"] == null ? "/Content/Upload/Images/resimyok.png" : Model.Resim)" />
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Logo</label>
                                    <div class="col-md-9">
                                        <div class="custom-file">
                                            <input type="file" class="form-control" id="pictureFile" name="LogoResim" lang="tr">
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Email</label>
                                    <div class="col-md-9">
                                        <input class="form-control" asp-for="Email" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.Email)">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Web Site</label>
                                    <div class="col-md-9">
                                        <input class="form-control" asp-for="WebSite" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.WebSite)">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Facebook</label>
                                    <div class="col-md-9">
                                        <input class="form-control" asp-for="Facebook" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.Facebook)">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Instagram</label>
                                    <div class="col-md-9">
                                        <input class="form-control" asp-for="Instagram" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.Instagram)">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Twitter</label>
                                    <div class="col-md-9">
                                        <input class="form-control" asp-for="Twitter" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.Twitter)">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Linkedin</label>
                                    <div class="col-md-9">
                                        <input class="form-control" asp-for="Linkedin" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.Linkedin)">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Pinterest</label>
                                    <div class="col-md-9">
                                        <input class="form-control" asp-for="Pinterest" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.Pinterest)">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Google Plus</label>
                                    <div class="col-md-9">
                                        <input class="form-control" asp-for="GooglePlus" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.GooglePlus)">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Youtube</label>
                                    <div class="col-md-9">
                                        <input class="form-control" asp-for="Youtube" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.Youtube)">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Whatsapp</label>
                                    <div class="col-md-9">
                                        <input class="form-control" asp-for="Whatsapp" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.Whatsapp)">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Sira</label>
                                    <div class="col-md-9">
                                        <input class="form-control" asp-for="Sira" name="Sira" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.Sira)">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Durum</label>
                                    <div class="col-md-9">
                                        <select class="form-control" asp-for="Durum" asp-items="Html.GetEnumSelectListWithDefaultValue<SayfaDurumlari>(defaultValue:SayfaDurumlari.Aktif)">
                                        </select>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>


                    <div class="col-md-12 mb-2 mt-4 center-block">
                        <div class="text-center">
                            <div class="form-group mb-0">
                                <div>
                                    <partial name="_SayfaButonlari" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>
</form>






@section scripts
{
    <script src="~/Admin/Content/Theme/assets/libs/summernote/summernote-bs4.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/libs/tinymce/tinymce.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/js/pages/form-editor.init.js"></script>

    <script>
        $(() => {
            $("#pictureFile").on('change', (e) => {
                var reader = new FileReader();
                reader.onloadend = (evt) => {
                    $('#picturePreview').attr('src', reader.result);
                };
                reader.readAsDataURL(document.getElementById('pictureFile').files[0]);
            });




        });
    </script>

} 