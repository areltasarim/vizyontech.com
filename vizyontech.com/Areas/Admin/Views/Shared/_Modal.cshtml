                </div>
            </div>
    </div>
</div>
<script>
    $('.btnOzellikKaydet').click(function (e) {
        e.preventDefault(); // Sayfa yenilenmesini engelle
        var $button = $(this); // Tıklanan buton
        var originalText = $button.text(); // Orijinal metni sakla

        // Buton metnini değiştir ve işlem başlasın
        $button.text('Yapılıyor...').prop('disabled', true);

        var formData = $('#frmUrunSecenekEkle').serialize(); // Form verilerini al
      
        $.ajax({
            type: 'POST',
            url: '/Admin/Urunler/OzellikKaydet',
            data: formData,
            beforeSend: function ()
            {
                // İstek gönderilmeden önce yapılacak işlemler
            },
            success: function (response)
            {
                if (response.Durum) {
                    UrunSecenekListesiYukle(response.Result.SecenekTip, response.Result.Secenek);
                    var modal = $('#modal');
                    if (typeof (model) != "undefined") {
                        model.hide();
                    }
                }
                else {
                    alert(response.Mesaj);
                }
                
            },
            complete: function () {
                // İstek tamamlandığında yapılacak işlemler
                $button.text(originalText).prop('disabled', false); // Buton metnini eski haline getir
            },
            error: function (xhr, status, error) {
                console.error(error);
            }
        });
    });

</script>