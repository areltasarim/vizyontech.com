@model List<UrunToUrunSecenekToUrunDeger>
@{



 }
<div>
    <div class="d-flex justify-content-between">
        <h4 class="card-title">Select</h4>
        <button type="button" class="btn btn-danger btn-sm mb-2"><i class="fas fa-minus-circle"></i> </button>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label card-title" style="text-align:center; font-size:15px; color:black; font-weight:bold !important">Zorunlu mu?</label>
                <div class="col-sm-10">
                    <select class="form-select">
                        <option value="1">Evet</option>
                        <option value="0">Hayır</option>
                    </select>
                </div>
            </div>
            <table id="alternative-page-datatable" data-pattern="priority-columns" class="table table-bordered dt-responsive nowrap w-100">
                <thead>
                    <tr>
                        <th>Seçenek Adı</th>
                        <th>Adet</th>
                        <th>Kontrol</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.UrunSecenekDegerleri.UrunSecenekDegerleriTranslate.Where(x=>x.DilId==1).FirstOrDefault()?.DegerAdi
                            </td>
                            <td>
                                @item.Adet
                            </td>
                            <td>
                                <a href="#" class="mr-3 text-primary" data-toggle="tooltip" data-placement="top" title="Düzenle" data-original-title="Düzenle"><i class="mdi mdi-pencil font-size-18"></i></a>
                                <a href="#" class="text-danger remove" data-toggle="tooltip" data-placement="top" title="Sil" data-original-title="Sil"><i class="mdi mdi-trash-can font-size-18"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2"></td>
                        <td class="text-end">
                            <a data-option-row="10" data-bs-toggle="tooltip" title="" class="btn btn-primary admin-modal-ac" data-toggle="modal" data-target="@Url.Action("_UrunSecenekEkle", "Urunler", new { SecenekId = Model.FirstOrDefault().UrunSecenekDegerleri.UrunSecenekId })" data-formid="frmUrunSecenekEkle" data-modalbaslik="Seçenek Ekle" data-sayfayenile="false"><i class="fa fa-plus-circle"></i></a>
                        </td>
                    </tr>
                </tfoot>
            </table>

        </div>
    </div>
</div>


<script src="~/Admin/Content/Theme/ozel/Custom.js"></script>



