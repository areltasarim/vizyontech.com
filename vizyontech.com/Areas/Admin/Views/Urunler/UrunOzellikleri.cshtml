@model UrunToOzellikViewModel
@{
    ViewData["Title"] = ViewData["AltBaslik"].ToString();

    var DilListesi = ViewBag.Diller as IEnumerable<Diller>;
}

@section styles
{
    <link href="assets/libs/summernote/summernote-bs4.min.css" rel="stylesheet" type="text/css" />
}

<partial name="_SayfaBreadcrumb" />
<partial name="_BilgiMesaji" />

<form method="post" asp-controller="Urunler" asp-action="UrunOzellikKaydet" enctype="multipart/form-data" id="urunToOzellikViewModel">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">
                        <i class="ri-edit-box-line"></i> @ViewData["AltBaslik"]
                    </h4>

                    <hr class="my-4">
                    <!--   Nav tabs -->

                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#genel" role="tab">
                                <span class="">Genel</span>
                            </a>
                        </li>
                    </ul>

                    <!--  Tab panes-->
                    <div class="tab-content p-3 text-muted">
                        @Html.HiddenFor(x => Model.UrunId)
                        @Html.HiddenFor(x => Model.OzellikGrupId)
                        <div class="tab-pane active" id="genel" role="tabpanel">
                            <!--  Tab panes-->
                            <div class="tab-content p-3 text-muted">
                                <div class="col-md-12">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <td class="text-left">Özellik</td>
                                                <td class="text-left">Resim</td>
                                                <td class="text-left">Açıklama</td>
                                            </tr>
                                        </thead>
                                        <tbody id="UrunToOzellikListe">

                                            @Html.EditorFor(x => Model.UrunToOzellikListesi)

                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td class="text-right">
                                                    <button type="button" onclick="urunToOzellikEkle();" data-toggle="tooltip" title="" class="btn btn-primary" data-original-title="Özellik Ekle">
                                                        <i class="fa fa-plus-circle"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 mb-2 mt-4 center-block">
                        <div class="text-center">
                            <div class="form-group mb-0">
                                <div>
                                    <partial name="_SayfaButonlari" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>






@section scripts
{
    <script src="~/Admin/Content/Theme/assets/libs/summernote/summernote-bs4.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/libs/tinymce/tinymce.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/js/pages/form-editor.init.js"></script>

    <script>
        $(() => {
            $("#pictureFile").on('change', (e) => {
                var reader = new FileReader();
                reader.onloadend = (evt) => {
                    $('#picturePreview').attr('src', reader.result);
                };
                reader.readAsDataURL(document.getElementById('pictureFile').files[0]);
            });
        });


        function urunToOzellikEkle() {
            $.ajax({
                async: true,
                data: $('#urunToOzellikViewModel').serialize(),
                type: "POST",
                url: '/Admin/Urunler/UrunOzellikEkle',
                success: function (data) {

                    $('#UrunToOzellikListe').html(data);

                }
            });
        }

        //Ürün Seçenek Değer Silme
        $(document).on('click', '.urunozellik-row-remove', function ()
         {
             var currentRow = $(this).closest('tr');
             var silinmeDurumInput = currentRow.find('.SilinmeDurum');
             silinmeDurumInput.val(true);
             currentRow.hide();
             @foreach (var item in DilListesi)
             {
                 @:var nextRow = currentRow.next('.ozellik-deger-row');
                 @:var nextRowsilinmeDurumInput = nextRow.find('.SilinmeDurum');
                 @:nextRowsilinmeDurumInput.val(true);
                 @:nextRow.hide();
             }
         });
        //Ürün Seçenek Değer Silme

    </script>

} 