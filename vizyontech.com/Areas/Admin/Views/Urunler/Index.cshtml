                    }
                }
            });
        });


        function GaleriResimleri(id, urunresimkategoriid) {
            $.fancybox.open({
                href: '/Admin/Urunler/PageImages/' + id + '?UrunResimKategoriId=' + urunresimkategoriid + '',
                type: 'iframe',
                width: 1000,
                minHeight: 600,
                padding: 5,
