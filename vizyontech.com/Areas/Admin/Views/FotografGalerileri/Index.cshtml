@model IEnumerable<FotografGalerileri>

@{
    ViewData["Title"] = ViewData["Baslik"].ToString();

    var _context = new AppDbContext();

    var controllerValue = HttpContextAccessor.HttpContext.Request.RouteValues["Controller"];

    bool topluResim = false;
    if (Context.Request.Query["TopluResim"].ToString() == "true")
    {
        topluResim = true;
    }

}


<partial name="_SayfaBreadcrumb" />
<partial name="_BilgiMesaji" />

<div class="row">
    <div class="col-lg-12">
        <form method="post" id="pageForm" asp-area="Admin" asp-controller="@controllerValue" asp-action="DeleteAll">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-custom mb-4">
                        <li class="nav-item me-2">
                            <button type="submit" class="btn btn-danger waves-effect text-white remove" value="SeciliKayitlariSil" id="selectedpagecheck">
                                <i class="fa fa-check"></i>  Seçili Kayıtları Sil
                            </button>
                        </li>
                        <li class="nav-item mb-2">
                            <a asp-area="Admin" asp-controller="@controllerValue" asp-action="AddOrUpdate" asp-route-TopluResim="@Context.Request.Query["TopluResim"]" class="btn btn-success  text-white"><i class="mdi mdi-plus mr-2"></i> @ViewData["AltBaslik"]</a>
                        </li>
                    </ul>
                    <table id="alternative-page-datatable" data-pattern="priority-columns" class="table dt-responsive nowrap w-100">
                        <thead>
                            <tr>
                                <partial name="_SayfaUstCheckbox" />
                                <th>Galeri Adı</th>
                                <th>Galeri Resimleri</th>
                                <th>Sıra</th>
                                <th>Durum</th>
                                <th>Kontrol</th>
                            </tr>
                        </thead>
                        <tbody id="tablolist">
                            @foreach (var item in Model)
                            {
                                ViewData["pageName"] = item.FotografGalerileriTranslate.SingleOrDefault(x => x.Diller.DilKodlari.DilKodu == "tr-TR")?.GaleriAdi;

                                <tr>
                                    <partial name="_SayfaAltCheckbox" for="@item" />
                                    <td>
                                        @(item.FotografGalerileriTranslate.SingleOrDefault(x => x.Diller.DilKodlari.DilKodu == "tr-TR")?.GaleriAdi)
                                    </td>
                                    <td>
                                        <a onclick="GaleriResimleri(@item.Id, '@topluResim.ToString().ToLower()', '@item.GaleriSayfaTipi')" href="javascript: void()" class="btn btn-sm btn-success">Galeri Resimleri</a>
                                    </td>
                                    <td>@item.Sira</td>
                                    <td>@item.Durum</td>
                                    <td>
                                        <a asp-controller="@controllerValue" asp-action="AddOrUpdate" asp-route-id="@item.Id" asp-route-TopluResim="@Context.Request.Query["TopluResim"]" class="mr-3 text-primary" data-toggle="tooltip" data-placement="top" title="Düzenle" data-original-title="Düzenle"><i class="mdi mdi-pencil font-size-18"></i></a>
                                        <a asp-controller="@controllerValue" asp-action="Delete" asp-route-id="@item.Id" asp-route-TopluResim="@Context.Request.Query["TopluResim"]" data-name="@ViewData["pageName"]" class="text-danger remove" data-toggle="tooltip" data-placement="top" title="Sil" data-original-title="Sil"><i class="mdi mdi-trash-can font-size-18"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>
<partial name="_RemoveModal" />

@section scripts
{
    <partial name="_DataTableScriptsPartial" />

    <partial name="_CustomScriptsPartial" />

    <script>
        $(document).ready(function () {
            $('.fancybox').fancybox();

            $.fn.fancybox.close = function () {
                //$('#sub_cont').hide(250, function() {
                //    $('#IDsearchform input').val('');
                //});
                alert("?");
            };
            $(".fancybox-effects-a").fancybox({
                helpers: {
                    title: {
                        type: 'outside'
                    },
                    overlay: {
                        speedOut: 0
                    }
                }
            });
        });


        $(document).ready(function () {
            $('.fancybox').fancybox();

            $.fn.fancybox.close = function () {
                //$('#sub_cont').hide(250, function() {
                //    $('#IDsearchform input').val('');
                //});
                alert("?");
            };
            $(".fancybox-effects-a").fancybox({
                helpers: {
                    title: {
                        type: 'outside'
                    },
                    overlay: {
                        speedOut: 0
                    }
                }
            });
        });


        function GaleriResimleri(id, topluresim, sayfagaleritipi) {
            $.fancybox.open({
                href: '/Admin/FotografGalerileri/PageImages/' + id + '?TopluResim=' + topluresim + '&GaleriSayfaTipi=' + sayfagaleritipi + '',
                type: 'iframe',
                width: 1000,
                minHeight: 600,
                padding: 5,
                //closeClick: false,
                onClosed: function () {
                    //  Raporla();
                    jQuery.fancybox.close();
                },
                afterClose: function () {
                    //  Raporla();
                    jQuery.fancybox.close();
                },
                mouseWheel: false

            });
        }
    </script>


}