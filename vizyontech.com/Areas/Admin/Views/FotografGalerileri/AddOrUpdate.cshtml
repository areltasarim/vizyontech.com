@model FotografGalerileri
@{
    ViewData["Title"] = ViewData["AltBaslik"].ToString();
}

@section styles
{
    <link href="assets/libs/summernote/summernote-bs4.min.css" rel="stylesheet" type="text/css" />
}

<partial name="_SayfaBreadcrumb" />
<partial name="_BilgiMesaji" />

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">
                        <i class="ri-edit-box-line"></i> @ViewData["AltBaslik"]
                    </h4>

                    <hr class="my-4">
                    <!--   Nav tabs -->

                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#genel" role="tab">
                                <span class="">Genel</span>
                            </a>
                        </li>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#seo" role="tab">
                                <span class="">Seo Bilgileri</span>
                            </a>
                        </li>
                    </ul>

                    <!--  Tab panes-->
                    <div class="tab-content p-3 text-muted">
                        <div class="tab-pane active" id="genel" role="tabpanel">
                            <!--  Dil panes-->
                            <ul class="nav nav-tabs" role="tablist">
                                @foreach (var dil in ViewBag.Diller as IEnumerable<Diller>)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @((dil.DilKodlari.DilKodu == "tr-TR")? "active":"")" data-bs-toggle="tab" href="#dil-@(dil.DilKoduId)" role="tab">
                                            <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                                            <span class="d-none d-sm-block">@dil.DilAdi</span>
                                        </a>
                                    </li>
                                }
                            </ul>

                            <!--  Tab panes-->
                            <div class="tab-content p-3 text-muted">
                                @foreach (var dil in ViewBag.Diller as IEnumerable<Diller>)
                                {
                                    <div class="tab-pane @((dil.DilKodlari.DilKodu == "tr-TR")? "active":"")" id="dil-@(dil.DilKoduId)" role="tabpanel">
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Galeri Adı</label>
                                            <div class="col-md-9">

                                                <input class="form-control" name="GaleriAdiCeviri" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.FotografGalerileriTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.GaleriAdi)">

                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Kısa Açıklama</label>
                                            <div class="col-md-9">
                                                <textarea class="form-control" rows="3" name="KisaAciklamaCeviri">@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.FotografGalerileriTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.KisaAciklama)</textarea>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (Context.Request.Query["TopluResim"].ToString() == "true")
                                {
                                    <input type="hidden" asp-for="GaleriTipi" value="@Model?.GaleriTipi" />
                                    <div class="row mb-3">
                                        <label for="example-text-input" class="col-md-1 col-form-label">Galeri Sayfa Tipleri</label>
                                        <div class="col-md-9">
                                            <select class="form-control" asp-for="GaleriSayfaTipi" asp-items="Html.GetEnumSelectList<GaleriSayfaTipleri>()">
                                            </select>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <input type="hidden" asp-for="GaleriSayfaTipi" value="@Model?.GaleriSayfaTipi" />
                                    <div class="row mb-3">
                                        <label for="example-text-input" class="col-md-1 col-form-label">Galeri Tipleri</label>
                                        <div class="col-md-9">
                                            <select class="form-control" asp-for="GaleriTipi" asp-items="Html.GetEnumSelectList<GaleriTipleri>()">
                                            </select>
                                        </div>
                                    </div>
                                }

                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label"></label>
                                    <div class="col-md-9">
                                        <img id="picturePreview" src="@(ViewContext.RouteData.Values["Id"] == null ? "/Content/Upload/Images/resimyok.png" : Model.Resim)" width="200" />
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Kapak Resmi</label>
                                    <div class="col-md-9">
                                        <div class="custom-file">
                                            <input type="file" class="form-control" id="pictureFile" name="SayfaResmi" lang="tr">
                                        </div>
                                    </div>
                                </div>
                                @if (User.IsInRole("Administrator"))
                                {
                                    <div class="row mb-3">
                                        <label for="example-text-input" class="col-md-1 col-form-label">Silme Yetkisi</label>
                                        <div class="col-md-9">
                                            <select class="form-control" asp-for="SilmeYetkisi" asp-items="Html.GetEnumSelectList<SayfaDurumlari>()">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label for="example-text-input" class="col-md-1 col-form-label">Sol Menüde Göster</label>
                                        <div class="col-md-9">
                                            <select class="form-control" asp-for="AdminSolMenu" asp-items="Html.GetEnumSelectList<AdminSolMenuDurumlari>()">
                                            </select>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <input type="hidden" asp-for="SilmeYetkisi" value="@(ViewContext.RouteData.Values["Id"] == null ? SayfaDurumlari.Pasif : Model.SilmeYetkisi)" />
                                    <input type="hidden" asp-for="AdminSolMenu" value="@(ViewContext.RouteData.Values["Id"] == null ? SayfaDurumlari.Pasif : Model.AdminSolMenu)" />
                                }
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Durum</label>
                                    <div class="col-md-9">
                                        <select class="form-control" asp-for="Durum" asp-items="Html.GetEnumSelectListWithDefaultValue<SayfaDurumlari>(defaultValue:SayfaDurumlari.Aktif)">
                                        </select>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="tab-pane" id="seo" role="tabpanel">
                            <!--  Dil panes-->
                            <ul class="nav nav-tabs" role="tablist">
                                @foreach (var dil in ViewBag.Diller as IEnumerable<Diller>)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @((dil.DilKodlari.DilKodu == "tr-TR")? "active":"")" data-toggle="tab" href="#dil-@(dil.DilKoduId)-seo" role="tab">
                                            <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                                            <span class="d-none d-sm-block">@dil.DilAdi</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                            <!--  Tab panes-->
                            <div class="tab-content p-3 text-muted">
                                @foreach (var dil in ViewBag.Diller as IEnumerable<Diller>)
                                {
                                    <div class="tab-pane @((dil.DilKodlari.DilKodu == "tr-TR")? "active":"")" id="dil-@(dil.DilKoduId)-seo" role="tabpanel">
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Meta Başlık</label>
                                            <div class="col-md-9">
                                                <input class="form-control" name="MetaBaslikCeviri" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.FotografGalerileriTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.MetaBaslik)" type="text">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Meta Açıklama</label>
                                            <div class="col-md-9">
                                                <textarea class="form-control" name="MetaAciklamaCeviri" rows="3">@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.FotografGalerileriTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.MetaAciklama)</textarea>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Meta Kelime</label>
                                            <div class="col-md-9">
                                                <textarea class="form-control" name="MetaAnahtarCeviri" rows="3">@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.FotografGalerileriTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.MetaAnahtar)</textarea>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>


                    <div class="col-md-12 mb-2 mt-4 center-block">
                        <div class="text-center">
                            <div class="form-group mb-0">
                                <div>
                                    <partial name="_SayfaButonlari" />

                                </div>
                            </div>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>
</form>





@section scripts
{
    <script src="~/Admin/Content/Theme/assets/libs/summernote/summernote-bs4.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/libs/tinymce/tinymce.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/js/pages/form-editor.init.js"></script>

    <script>
        $(() => {
            $("#pictureFile").on('change', (e) => {

                var reader = new FileReader();
                reader.onloadend = (evt) => {
                    $('#picturePreview').attr('src', reader.result);

                };
                reader.readAsDataURL(document.getElementById('pictureFile').files[0]);
            });
        });



    </script>

} 