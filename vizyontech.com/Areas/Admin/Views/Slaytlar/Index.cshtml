@model IEnumerable<Slaytlar>

@{
    ViewData["Title"] = ViewData["Baslik"].ToString();

    var _context = new AppDbContext();

    var controllerValue = HttpContextAccessor.HttpContext.Request.RouteValues["Controller"];

}

@section styles
{
    <link href="~/Admin/Content/Theme/ozelcss/custom.css" rel="stylesheet" />
}

<partial name="_SayfaBreadcrumb" />
<partial name="_BilgiMesaji" />

<div class="row">
    <div class="col-lg-12">
        <form method="post" id="pageForm" asp-area="Admin" asp-controller="@controllerValue" asp-action="DeleteAll">
            <div class="card">
                <div class="card-body">
                    <partial name="_SayfaHeaderButonlari" />
                    <table id="alternative-page-datatable" data-pattern="priority-columns" class="table dt-responsive nowrap w-100">
                        <thead>
                            <tr>
                                <partial name="_SayfaUstCheckbox" />
                                <th>Resim</th>
                                <th>Başlık</th>
                                <partial name="_SayfaUstKontrolButonlari" />
                            </tr>
                        </thead>
                        <tbody id="tablolist">
                            @foreach (var item in Model)
                            {
                                ViewData["pageName"] = item.SlaytlarTranslate.SingleOrDefault(x => x.Diller.DilKodlari.DilKodu == "tr-TR")?.SlaytBaslik;

                                <tr>
                                    <partial name="_SayfaAltCheckbox" for="@item" />
                                    <td>
                                        <div class="imgshow">
                                            <i class="fa fa-camera"></i>
                                            <div>
                                                <img src="@(item.SlaytlarTranslate.SingleOrDefault(x => x.Diller.DilKodlari.DilKodu == "tr-TR")?.Resim)" />
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @(item.SlaytlarTranslate.SingleOrDefault(x => x.Diller.DilKodlari.DilKodu == "tr-TR")?.SlaytBaslik)
                                    </td>
                                    <partial name="_SayfaAltKontrolButonlari" for="@item" />
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>
<partial name="_RemoveModal" />

@section scripts
{
    <partial name="_DataTableScriptsPartial" />

    <script>
        //Resim Önizleme Başlangıç
        $(function () {
            $('.imgshow i').hover(function () {
                $(this).parent().find('>div').fadeIn(300)

            }, function () {
                $(this).parent().find('>div').fadeOut(300)
            })
        })
       //Resim Önizleme Bitiş
    </script>

    <partial name="_CustomScriptsPartial" />

}