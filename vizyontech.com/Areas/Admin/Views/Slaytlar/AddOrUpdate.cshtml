    <script src="~/Admin/Content/Theme/assets/js/pages/form-editor.init.js"></script>

    <script>
        $(() => {
            $("input:file").change(function () {

                //Resim Baslangıc
                var dosyaad = $(this).val();
                var hedefdata = $(this).data("hedef");
                var hedef = $(hedefdata);
                var dil = hedef.data("dil");
                var ifade = dil + '|' + dosyaad;
                hedef.val(ifade);
                //Resim Önizleme
                var oFReader = new FileReader();
                oFReader.readAsDataURL(document.getElementById("uploadImage_" + dil).files[0]);
                oFReader.onload = function (oFREvent) {
                    document.getElementById("uploadPreview_" + dil).src = oFREvent.target.result;
                };
                //Resim Önizleme
                //Resim Bitis

            });
        });

        //Arkaplan Resim Baslangıc
        $(() => {
            pictureFile.onchange = evt => {
                const [file] = pictureFile.files
                if (file) {
                    picturePreview.src = URL.createObjectURL(file)
                }
            }
        });
        //Arkaplan Resim Bitis

        //Video
        $(document).on('change', '.videodosyasi', function () {
            var dosyaad = $(this).val();
            console.log(dosyaad);
            var hedefdata = $(this).data("dosyahedef");
            var hedef = $(hedefdata);
            var dil = hedef.data("dil");
            var ifade = "";
            ifade = dil + '|' + dosyaad;
            hedef.val(ifade);
        });
        //Video
    </script>


    <!--Ürün Search Filter -->
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('input[name=\'UrunAutocomplete\']').autocomplete({
                source: "/Admin/Slaytlar/UrunAutoComplete",
                minLength: 1,
                select: function (event, ui) {
                    $('#SeciliUrunlerAutocomplete' + ui.item['id']).remove();
                    $('.ui-sortable').append('<li id="SeciliUrunlerAutocomplete' + ui.item['id'] + '"><div><i class="fa fa-plus"></i>  ' + ui.item['label'] + '<p style="z-index: 2;float: right;padding-right: 10px;margin-top: 0px;font-size: 12px;font-family: Arial;"><a href="#" class="uruntoslaytid"  data-uruntoslaytid="' + ui.item['id'] + '"><i class="fa fa-trash"></i> Kaldır</a></p><input type="hidden" name="SeciliUrunlerAutocomplete" value="' + ui.item['id'] + '"></div></li>');
                    ui.item.value = "";
                }
            });
        });

        $(".uruntoslaytid").click(function () {
            var uruntoslaytid = $(this).attr("data-uruntoslaytid");
            $("#SeciliUrunlerAutocomplete" + uruntoslaytid).remove();
        });

    </script>
    <!--Ürün Search Filter -->
