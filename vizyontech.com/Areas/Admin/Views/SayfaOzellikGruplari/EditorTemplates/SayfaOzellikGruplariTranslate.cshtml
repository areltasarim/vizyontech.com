@model SayfaOzellikGruplariTranslate
@{


}

@Html.HiddenFor(x => x.Id)
@Html.HiddenFor(x => x.DilId)

@foreach (var dil in ViewBag.Diller as IEnumerable<Diller>)
{
    if (dil.DilKoduId == Model.DilId)
    {
        <div class="tab-pane @((dil.DilKodlari.DilKodu == "tr-TR")? "active":"")" id="dil-@(dil.DilKoduId)" role="tabpanel">
            <div class="row mb-3">
                <label for="example-text-input" class="col-md-1 col-form-label">Grup Adı</label>
                <div class="col-md-9">
                    <input class="form-control" asp-for="GrupAdi" type="text">
                </div>
            </div>
            <div class="row mb-3">
                <label for="example-text-input" class="col-md-1 col-form-label">Açıklama</label>
                <div class="col-md-9">
                    <textarea class="form-control" asp-for="Aciklama"></textarea>
                </div>
            </div>
        </div>
    }
}



