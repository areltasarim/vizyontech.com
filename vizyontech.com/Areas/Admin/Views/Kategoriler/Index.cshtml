@using EticaretWebCoreHelper
@using EticaretWebCoreEntity.Enums
@model IEnumerable<Kategoriler>

@{
    ViewData["Title"] = ViewData["Baslik"].ToString();

    var _context = new AppDbContext();

    var controllerValue = HttpContextAccessor.HttpContext.Request.RouteValues["Controller"];

}



<partial name="_SayfaBreadcrumb" />
<partial name="_BilgiMesaji" />

<div class="row">
    <div class="col-lg-12">
        <form method="post" id="pageForm" asp-area="Admin" asp-controller="@controllerValue" asp-action="DeleteAll">
            <div class="card">
                <div class="card-body">
                    <partial name="_SayfaHeaderButonlari" />
                    <table id="alternative-page-datatable" data-pattern="priority-columns" class="table dt-responsive nowrap w-100">
                        <thead>
                            <tr>
                                <partial name="_SayfaUstCheckbox" />
                                <th>Kategori Adı</th>
                                <th>URL Git</th>
                                <th>Banner</th>
                                <partial name="_SayfaUstKontrolButonlari" />
                            </tr>
                        </thead>
                        <tbody id="tablolist">
                            @foreach (var item in Model.Where(p => p.Id != 1))
                            {
                                ViewData["pageName"] = item.KategorilerTranslate.SingleOrDefault(x => x.Diller.DilKodlari.DilKodu == "tr-TR")?.KategoriAdi;
                                
                                // SeoUrl'yi bul
                                var seoUrl = _context.SeoUrl.FirstOrDefault(s => s.EntityId == item.Id && s.EntityName == SeoUrlTipleri.Kategori);
                                var urlGitButonu = "";
                                
                                if (seoUrl != null && !string.IsNullOrEmpty(seoUrl.Url))
                                {
                                    var urlPath = seoUrl.Url.StartsWith("/") ? seoUrl.Url : "/" + seoUrl.Url;
                                    urlGitButonu = $"<a href='{urlPath}' target='_blank' class='btn btn-sm btn-info' data-toggle='tooltip' data-placement='top' title='URL Git' data-original-title='URL Git'><i class='mdi mdi-open-in-new'></i> URL Git</a>";
                                }
                                else
                                {
                                    urlGitButonu = "<span class='text-muted'>-</span>";
                                }

                                <tr>
                                    <partial name="_SayfaAltCheckbox" for="@item" />
                                    <td>
                                        @string.Join(" > ", item.ToCategoryTree())
                                    </td>
                                    <td>
                                        @Html.Raw(urlGitButonu)
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-info" asp-controller="Kategoriler" asp-action="KategoriBanner" asp-route-KategoriId="@item.Id">Banner Ekle</a>
                                    </td>
                                    <partial name="_SayfaAltKontrolButonlari" for="@item" />
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>
<partial name="_RemoveModal" />

@section scripts
{
    <partial name="_DataTableScriptsPartial" />
    <partial name="_CustomScriptsPartial" />

}