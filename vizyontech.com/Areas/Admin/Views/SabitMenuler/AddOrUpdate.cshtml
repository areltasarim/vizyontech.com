@model SabitMenuler
@{
    ViewData["Title"] = ViewData["AltBaslik"].ToString();
}

@section styles
{
    <link href="assets/libs/summernote/summernote-bs4.min.css" rel="stylesheet" type="text/css" />
}

<partial name="_SayfaBreadcrumb" />
<partial name="_BilgiMesaji" />

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">
                        <i class="ri-edit-box-line"></i> @ViewData["AltBaslik"]
                    </h4>

                    <hr class="my-4">
                    <!--   Nav tabs -->

                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#genel" role="tab">
                                <span class="">Genel</span>
                            </a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#seo" role="tab">
                                <span class="">Seo Bilgileri</span>
                            </a>
                        </li>
                    </ul>

                    <!--  Tab panes-->
                    <div class="tab-content p-3 text-muted">
                        <div class="tab-pane active" id="genel" role="tabpanel">
                            <!--  Dil panes-->
                            <ul class="nav nav-tabs" role="tablist">
                                @foreach (var dil in ViewBag.Diller as IEnumerable<Diller>)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @((dil.DilKodlari.DilKodu == "tr-TR")? "active":"")" data-bs-toggle="tab" href="#dil-@(dil.DilKoduId)" role="tab">
                                            <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                                            <span class="d-none d-sm-block">@dil.DilAdi</span>
                                        </a>
                                    </li>
                                }
                            </ul>


                            <!--  Tab panes-->
                            <div class="tab-content p-3 text-muted">
                                @foreach (var dil in ViewBag.Diller as IEnumerable<Diller>)
                                {

                                    <div class="tab-pane @((dil.DilKodlari.DilKodu == "tr-TR")? "active":"")" id="dil-@(dil.DilKoduId)" role="tabpanel">
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Menü Adı</label>
                                            <div class="col-md-9">
                                                <input class="form-control" name="MenuAdiCeviri" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.SabitMenulerTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.MenuAdi)">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Url</label>
                                            <div class="col-md-9">
                                                <input class="form-control" name="UrlCeviri" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.SabitMenulerTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.Url)">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Açıklama</label>
                                            <div class="col-md-9">
                                                <textarea id="elm_@Guid.NewGuid().ToString()"
                                                          class="editortinycme"
                                                          name="AciklamaCeviri">@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.SabitMenulerTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.Aciklama)
                                                    </textarea>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Breadcrumb Sayfa Adı</label>
                                            <div class="col-md-9">
                                                <input class="form-control" name="BreadcrumbSayfaAdiCeviri" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.SabitMenulerTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.BreadcrumbAdi)">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Breadcrumb Açıklama</label>
                                            <div class="col-md-9">
                                                <input class="form-control" name="BreadcrumbAciklamaCeviri" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.SabitMenulerTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.BreadcrumbAciklama)">
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="row mb-3">
                                    <label class="col-md-1 col-form-label">Sayfa Tipi</label>
                                    <div class="col-md-9">
                                        <select class="form-control" required asp-for="SayfaTipi" asp-items="Html.GetEnumSelectList<SabitSayfaTipleri>()">
                                            <option value="">Seçiniz</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label"></label>
                                    <div class="col-md-9">
                                        <img id="picturePreview" src="@(ViewContext.RouteData.Values["Id"] == null ? "/Content/Upload/Images/resimyok.png" : Model.BreadcrumbResim)" width="200" />
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Breadcrumb Resmi</label>
                                    <div class="col-md-9">
                                        <div class="custom-file">
                                            <input type="file" class="form-control" id="pictureFile" name="BreadcrumbImage" lang="tr">
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="example-text-input" class="col-md-1 col-form-label">Durum</label>
                                    <div class="col-md-9">
                                        <select class="form-control" asp-for="Durum" asp-items="Html.GetEnumSelectListWithDefaultValue<SayfaDurumlari>(defaultValue:SayfaDurumlari.Aktif)">
                                        </select>
                                    </div>
                                </div>

                            </div>

                        </div>
                          <div class="tab-pane" id="seo" role="tabpanel">
                            <!--  Dil panes-->
                            <ul class="nav nav-tabs" role="tablist">
                                @foreach (var dil in ViewBag.Diller as IEnumerable<Diller>)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @((dil.DilKodlari.DilKodu == "tr-TR")? "active":"")" data-toggle="tab" href="#dil-@(dil.DilKoduId)-seo" role="tab">
                                            <span class="">@dil.DilAdi</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                            <!--  Tab panes-->
                            <div class="tab-content p-3 text-muted">
                                @foreach (var dil in ViewBag.Diller as IEnumerable<Diller>)
                                {
                                    <div class="tab-pane @((dil.DilKodlari.DilKodu == "tr-TR")? "active":"")" id="dil-@(dil.DilKoduId)-seo" role="tabpanel">
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Meta Başlık</label>
                                            <div class="col-md-9">
                                                <input class="form-control" name="MetaBaslikCeviri" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.SabitMenulerTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.MetaBaslik)" type="text">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Meta Açıklama</label>
                                            <div class="col-md-9">
                                                <textarea class="form-control" name="MetaAciklamaCeviri" rows="3">@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.SabitMenulerTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.MetaAciklama)</textarea>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-md-1 col-form-label">Meta Kelime</label>
                                            <div class="col-md-9">
                                                <textarea class="form-control" name="MetaAnahtarCeviri" rows="3">@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.SabitMenulerTranslate.SingleOrDefault(p=> p.Diller.DilKoduId == dil.DilKoduId)?.MetaAnahtar)</textarea>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>


                    <div class="col-md-12 mb-2 mt-4 center-block">
                        <div class="text-center">
                            <div class="form-group mb-0">
                                <div>
                                    <partial name="_SayfaButonlari" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>
</form>






@section scripts
{
    <script src="~/Admin/Content/Theme/assets/libs/summernote/summernote-bs4.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/libs/tinymce/tinymce.min.js"></script>
    <script src="~/Admin/Content/Theme/assets/js/pages/form-editor.init.js"></script>

    <script>
        $(() => {
            $("#pictureFile").on('change', (e) => {
                var reader = new FileReader();
                reader.onloadend = (evt) => {
                    $('#picturePreview').attr('src', reader.result);
                };
                reader.readAsDataURL(document.getElementById('pictureFile').files[0]);
            });




        });
    </script>

} 