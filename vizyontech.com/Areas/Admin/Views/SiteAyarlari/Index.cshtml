@using EticaretWebCoreHelper
@model IEnumerable<SiteAyarlari>

@{
    ViewData["Title"] = ViewData["Baslik"].ToString();

    var _context = new AppDbContext();

    var controllerValue = HttpContextAccessor.HttpContext.Request.RouteValues["controller"];

}


<partial name="_SayfaBreadcrumb" />
<partial name="_BilgiMesaji" />

<div class="row">
    <div class="col-lg-12">
        <form method="post" id="pageForm" asp-area="Admin" asp-controller="@controllerValue" asp-action="DeleteAll">
            <div class="card">
                <div class="card-body">
                    <div>
                        @if (Model.ToList().Count == 0)
                        {
                            <a asp-area="Admin" asp-controller="@controllerValue" asp-action="AddOrUpdate" class="btn btn-success mb-2 float-right"><i class="mdi mdi-plus mr-2"></i> @ViewData["AltBaslik"]</a>
                        }

                    </div>
                    <table id="alternative-page-datatable" data-pattern="priority-columns" class="table dt-responsive nowrap w-100">
                        <thead>
                            <tr>
                                <partial name="_SayfaUstCheckbox" />
                                <th>Firma Adı</th>
                                <th>Adres Bilgileri</th>
                                <th style="width: 120px;">Kontrol</th>
                            </tr>
                        </thead>
                        <tbody id="tablolist">
                            @foreach (var item in Model)
                            {
                                ViewData["pageName"] = item.SiteAyarlariTranslate.SingleOrDefault(x => x.Diller.DilKodlari.DilKodu == "tr-TR")?.SiteAyarlari.FirmaAdi;

                                <tr>
                                    <partial name="_SayfaAltCheckbox" for="@item" />
                                    <td>
                                        @item?.FirmaAdi
                                    </td>
                                    <td>
                                        <a asp-controller="AdresBilgileri" asp-action="Index" asp-route-SiteAyarid="@item.Id" class="mr-3 text-primary" data-toggle="tooltip" data-placement="top" title="Düzenle" data-original-title="Düzenle"><i class="mdi mdi-view-list font-size-18"></i> Adres Bilgileri</a>
                                    </td>
                                    <td>
                                        <a asp-controller="@controllerValue" asp-action="AddOrUpdate" asp-route-id="@item.EncrypedId" class="mr-3 text-primary" data-toggle="tooltip" data-placement="top" title="Düzenle" data-original-title="Düzenle"><i class="mdi mdi-pencil font-size-18"></i></a>
                                        @if (User.IsInRole("Administrator"))
                                        {
                                            <a asp-controller="SiteAyarlari" asp-action="Delete" asp-route-id="@item.EncrypedId" data-name="@ViewData["pageName"]" class="text-danger remove" data-toggle="tooltip" data-placement="top" title="Sil" data-original-title="Sil"><i class="mdi mdi-trash-can font-size-18"></i></a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>
<partial name="_RemoveModal" />

@section scripts
{
    <partial name="_DataTableScriptsPartial" />
    <partial name="_CustomScriptsPartial" />
}