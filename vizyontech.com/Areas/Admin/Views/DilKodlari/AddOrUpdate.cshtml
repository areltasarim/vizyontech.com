@model DilKodlari
@{
    ViewData["Title"] = ViewData["AltBaslik"].ToString();
}

@section styles
{
}

<partial name="_SayfaBreadcrumb" />
<partial name="_BilgiMesaji" />

<form method="post" enctype="multipart/form-data" class="custom-validation">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">
                        <i class="ri-edit-box-line"></i> @ViewData["AltBaslik"]
                    </h4>

                    <hr class="my-4">
                    <!--   Nav tabs -->

                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#genel" role="tab">
                                <span class="">Genel</span>
                            </a>
                        </li>
                    </ul>

                    <!--  Tab panes-->
                    <div class="tab-content p-3 text-muted">
                        <div class="tab-pane active" id="genel" role="tabpanel">
                            <!--  Tab panes-->
                            <div class="row mb-3">
                                <label for="example-text-input" class="col-md-1 col-form-label">Dil Kodu</label>
                                <div class="col-md-9">
                                    <input class="form-control" asp-for="DilKodu" type="text" value="@(ViewContext.RouteData.Values["Id"] == null ? "" : Model.DilKodu)">
                                    <span asp-validation-for="DilKodu" class="text-danger"></span>
                                </div>
                                <!--  Tab panes-->
                            </div>
                        </div>
                        <div class="col-md-12 mb-2 mt-4 center-block">
                            <div class="text-center">
                                <div class="form-group mb-0">
                                    <div>
                                        <partial name="_SayfaButonlari" />

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>
</form>

@section scripts
{
    <script src="~/Admin/Content/Theme/assets/js/pages/form-editor.init.js"></script>

    <partial name="_ValidationScriptsPartial" />


} 